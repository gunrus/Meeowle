<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_avatar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:shapeAppearanceOverlay="@style/circleImageView_2"
            android:background="@color/card_background"
            app:srcCompat="@drawable/sleepy_cat"
            />


        <TextView
            android:id="@+id/cat_name"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/round_button_drawable"
            android:clickable="false"
            android:gravity="center"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/card_cat_title"
            android:text="Pidrila"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:layout_below="@id/cat_avatar"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>